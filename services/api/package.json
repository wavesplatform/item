{
  "name": "@item-protocol/api",
  "version": "1.1.5",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "start": "node ./dist/index.js",
    "dev": "nodemon",
    "fix": "run-s fix:tslint fix:prettier",
    "fix:prettier": "prettier --write \"{src,test}/**/*.ts\" --ignore-path ../../.prettierignore",
    "fix:tslint": "tslint --fix -t stylish -p .",
    "test": "run-s test:jest",
    "test:jest": "jest --passWithNoTests --config=jest.json",
    "test:watch": "test:jest -- --watch",
    "generate:resolvers": "graphqlgen",
    "mutations:dapp": "PRISMA_ENDPOINT=http://localhost:4466 ts-node ./src/mutations/dapp.ts"
  },
  "dependencies": {
    "@waves/signature-generator": "^5.2.1",
    "@waves/waves-crypto": "^3.0.17",
    "algoliasearch": "^3.34.0",
    "apollo-server-express": "^2.9.3",
    "aws-sdk": "^2.523.0",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "graphql": "^14.5.4",
    "graphql-cost-analysis": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "jsonwebtoken": "^9.0.0",
    "prisma-client-lib": "^1.34.8",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@item-protocol/types": "^1.1.1",
    "@types/algoliasearch": "^3.30.18",
    "@types/express": "^4.17.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/node": "^12.7.2",
    "graphqlgen": "^0.6.0-rc9",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  }
}
